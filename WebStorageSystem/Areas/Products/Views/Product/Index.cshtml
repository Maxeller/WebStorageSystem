@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "List of Products";
}

<h1>List of Products</h1>

<p>
    <a asp-action="Create">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                Product Type
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Last Modification
            </th>
            <th>
                Deleted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Manufacturer.Name
                </td>
                <td>
                    <span class="tippy" data-tippy-content="@item.ProductType.Description">@item.ProductType.Name</span>
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    @item.ModifiedDate
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="text-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @if (!item.IsDeleted)
                    {
                        <a href="#" class="text-primary" data-toggle="modal" data-target="#deleteRestoreModal" data-url="@Url.Action("Delete", new {Id = item.Id})" data-name="@item.Name">
                            Delete
                        </a>
                    }
                    @if (item.IsDeleted)
                    {
                        <a href="#" class="text-primary" data-toggle="modal" data-target="#deleteRestoreModal" data-url="@Url.Action("Restore", new {Id = item.Id})" data-name="@item.Name">
                            Restore
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="DeleteRestoreModal" />
@if (TempData["Error"] != null)
{
    await Html.RenderPartialAsync("ErrorModal", TempData["Error"]);
}