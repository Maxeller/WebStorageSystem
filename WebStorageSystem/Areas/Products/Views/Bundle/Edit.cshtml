@model BundleModel

@{
    ViewData["Title"] = "Edit " + Model.InventoryNumber;
}

<h1>Edit</h1>

<h4>Bundle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryNumber" class="control-label"></label>
                <input asp-for="InventoryNumber" class="form-control" />
                <span asp-validation-for="InventoryNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BundledUnitsIds" class="control-label"></label>
                <select asp-for="BundledUnitsIds" class="form-control selectTwo" asp-items="ViewBag.Units" multiple="multiple" data-placeholder="Select Units">
                </select>
                <span asp-validation-for="BundledUnitsIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control selectTwo" asp-items="ViewBag.Locations" data-placeholder="Select Location">
                    <option value="">-- Select Location --</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="DefaultLocationId" class="control-label"></label>
                <select asp-for="DefaultLocationId" class="form-control selectTwo" asp-items="ViewBag.DefaultLocations" data-placeholder="Select Default Location">
                    <option value="">-- Select Default Location --</option>
                </select>
                <span asp-validation-for="DefaultLocationId" class="text-danger" />
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (TempData["Error"] != null)
{
    await Html.RenderPartialAsync("ErrorModal", TempData["Error"]);
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
