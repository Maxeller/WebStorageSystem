@model IEnumerable<UnitModel>

@{
    ViewData["Title"] = "List of Units";
}

<h1>List of Units</h1>

<p>
    <a asp-action="Create">Create New Unit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Serial Number
            </th>
            <th>
                Product
            </th>
            <th>
                Location
            </th>
            <th>
                Vendor
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Last Modification
            </th>
            <th>
                Deleted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.SerialNumber
            </td>
            <td>
                @item.Product.Name
            </td>
            <td>
                @item.Location.Name
            </td>
            <td>
                @if (item.Vendor != null)
                {
                    @item.Vendor.Name;
                }
            </td>
            <td>
                @item.CreatedDate
            </td>
            <td>
                @item.ModifiedDate
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (!item.IsDeleted)
                {
                    <a href="#" class="text-primary" data-toggle="modal" data-target="#deleteRestoreModal" data-url="@Url.Action("Delete", new {Id = item.Id})" data-name="@item.SerialNumber">
                        Delete
                    </a>
                }
                @if (item.IsDeleted)
                {
                    <a href="#" class="text-primary" data-toggle="modal" data-target="#deleteRestoreModal" data-url="@Url.Action("Restore", new {Id = item.Id})" data-name="@item.SerialNumber">
                        Restore
                    </a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

<partial name="DeleteRestoreModal" />
@if (TempData["Error"] != null)
{
    await Html.RenderPartialAsync("ErrorModal", TempData["Error"]);
}