@page
@model SubscribeLocationsModel
@{
    ViewData["Title"] = "Subscribed Locations";
    ViewData["ActivePage"] = ManageNavPages.SubscribeLocations;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="sub-locations-form" method="post">
            <div class="form-group">
                <label asp-for="Input.SubscribedLocationsId" class="control-label"></label>
                <select asp-for="Input.SubscribedLocationsId" class="form-control selectTwo" asp-items="ViewBag.Locations" multiple="multiple" data-placeholder="Select Locations">
                </select>
                <span asp-validation-for="Input.SubscribedLocationsId" class="text-danger" />
            </div>
            <button id="update-sub-locations-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}