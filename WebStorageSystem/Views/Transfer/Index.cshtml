@model SubTransferModel

@{
    ViewData["Title"] = "List of Transfers";
}

<h1>List of Transfers</h1>

<p>
    <a asp-action="Create">Create New Transfer</a>
</p>

@Html.AntiForgeryToken()
<table id="dtTransfer" class="table table-striped table-bordered table-dark">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MainTransfer.TransferNumber)</th>
            <th>@Html.DisplayNameFor(model => model.MainTransfer.TransferTime)</th>
            <th>@Html.DisplayNameFor(model => model.MainTransfer.State)</th>
            <th>@Html.DisplayNameFor(model => model.MainTransfer.User.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.OriginLocation.Name)</th>
            <th>@Html.DisplayNameFor(model => model.DestinationLocation.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Unit.InventoryNumberProduct)</th>
            <th>@Html.DisplayNameFor(model => model.Action)</th>
        </tr>
    </thead>
</table>